<!DOCTYPE html>
<html>
  <head>
    <title>ReservationApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render "shared/host" %>
    <% else %>
      <%= render "shared/guest" %>
    <% end %>

    <div class="flash_container">
      <% if flash[:notice] %>
        <p class="flash notice"><%= flash[:notice] %></p>
      <% elsif flash[:alert] %>
        <p class="flash alert"><%= flash[:alert] %></p>
      <% end %>
    </div>

    <%= yield %>

    <footer class="footer">
      <p>©︎ 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
